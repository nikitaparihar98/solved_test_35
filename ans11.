#include <iostream>
using namespace std;

void towerOfHanoi(int n, char source, char helper, char destination, int &moveCount) {
    if (n == 0) return; 
    towerOfHanoi(n - 1, source, destination, helper, moveCount);
    moveCount++;
    towerOfHanoi(n - 1, helper, source, destination, moveCount);
}
int main() {
    int n;
    cin >> n; 
    int moveCount = 0;
    towerOfHanoi(n, 'A', 'B', 'C', moveCount);
    cout << "Total moves = " << moveCount << endl;
    return 0;
}
